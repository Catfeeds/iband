<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_background">
    <include layout="@layout/tab_activity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/text_title"
            android:textSize="14sp"
            android:text="你可以设置最多三个闹钟"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_background"/>

        <com.manridy.iband.ui.items.ClockItems
            android:id="@+id/ci_clock1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:clock_time="08:00"
            app:clock_hint="10小时57分钟后振动"
            app:clock_onoff="true"/>

    <com.manridy.iband.ui.items.ClockItems
        android:id="@+id/ci_clock2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clock_time="08:30"
        app:clock_hint="6小时12分钟后振动"
        app:clock_onoff="true"/>

    <com.manridy.iband.ui.items.ClockItems
        android:id="@+id/ci_clock3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clock_time="09:00"
        app:clock_hint="7小时5分钟后振动"
        app:clock_onoff="true"/>
</LinearLayout>