<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/tab_activity"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_user_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@mipmap/set_avatar"
        app:roundAsCircle="true"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_name"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@null"
        android:maxLength="8"
        android:hint="请输入用户名"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@color/line_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#26000000"/>

    <com.manridy.iband.ui.items.HelpItems
        android:id="@+id/hi_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:help_content_color="@color/text_content"
        app:help_name="性别"
        app:help_content="男"/>

    <com.manridy.iband.ui.items.HelpItems
        android:id="@+id/hi_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:help_bt_color="@color/text_title"
        app:help_content_color="@color/text_content"
        app:help_name="年龄"
        app:help_content="18"
        app:help_bt="(岁)"/>

    <com.manridy.iband.ui.items.HelpItems
        android:id="@+id/hi_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:help_bt_color="@color/text_title"
        app:help_content_color="@color/text_content"
        app:help_name="身高"
        app:help_content="170"
        app:help_bt="(cm)"/>

    <com.manridy.iband.ui.items.HelpItems
        android:id="@+id/hi_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:help_bt_color="@color/text_title"
        app:help_content_color="@color/text_content"
        app:help_name="体重"
        app:help_content="65"
        app:help_bt="(kg)"/>
</LinearLayout>